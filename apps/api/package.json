{
  "name": "@app/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/apps/api/src/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "db:reset": "rm -f dev.db dev.db-journal prisma/dev.db prisma/dev.db-journal && prisma migrate diff --from-empty --to-schema-datamodel prisma/schema.prisma --script > /tmp/nearhome_init.sql && prisma db execute --schema prisma/schema.prisma --file /tmp/nearhome_init.sql && prisma generate && tsc -p tsconfig.json && node dist/apps/api/prisma/seed.js",
    "test": "vitest run",
    "lint": "eslint ."
  },
  "dependencies": {
    "@app/shared": "workspace:*",
    "@fastify/cors": "^10.0.2",
    "@fastify/jwt": "^9.0.1",
    "@fastify/sensible": "^6.0.3",
    "@prisma/client": "^6.3.1",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.2.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/bcryptjs": "^2.4.6",
    "prisma": "^6.3.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
